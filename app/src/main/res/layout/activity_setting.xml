<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <TextView
        android:id="@+id/SettingsTextBar"
        style="@style/HeadText"
        android:text="@string/bigButton_settings"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SettingsTextBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.SwitchCompat
                style="@style/SettingSwitchStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"

                android:contentDescription="@string/settActive_theme_switch"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/SettingOptionTextViewStyle"
                android:text="@string/settActive_theme_switch"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/ShareButton"
                style="@style/SettingIconButtonStyle"
                android:contentDescription="@string/settActive_share"
                app:icon="@drawable/share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/SettingOptionTextViewStyle"
                android:text="@string/settActive_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/SupportButton"
                style="@style/SettingIconButtonStyle"
                android:contentDescription="@string/settActive_support_ticket"
                app:icon="@drawable/headphones"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/SettingOptionTextViewStyle"
                android:text="@string/settActive_support_ticket"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/UserCondButton"
                style="@style/SettingIconButtonStyle"
                android:contentDescription="@string/settActive_user_conditions"
                app:icon="@drawable/arrowhead"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/SettingOptionTextViewStyle"
                android:text="@string/settActive_user_conditions"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintBottom_toTopOf="@+id/tapBarSettings"
        android:background="@color/YP_lightGray"
        android:contentDescription="@string/tapBarBorder"
        />
    <LinearLayout
        android:id="@+id/tapBarSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >


        <Button
            style="@style/TapButtonStyle"
            android:text="@string/bigButton_search"
            app:icon="@drawable/searchlens"
            />

        <Button
            style="@style/TapButtonStyle"
            android:text="@string/bigButton_media"
            app:icon="@drawable/mediaicon"/>

        <Button
            style="@style/TapButtonStyle"
            android:text="@string/bigButton_settings"
            app:icon="@drawable/settinggear"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

