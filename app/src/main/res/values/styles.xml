<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/bigButton_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:shadowColor">@color/white</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/bigButton_textSize</item>
        <item name="android:fontWeight">500</item>

        <item name="cornerRadius">@dimen/bigButton_cornerRad</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/YP_black</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SettingHeadText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">12dp</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/bigButton_settings</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="SettingSwitchStyle">
        <item name="thumbTint">@drawable/switchthump</item>
        <item name="trackTint">@drawable/switchtrack</item>
        <item name="android:padding">@dimen/settActiv_buttons_padding</item>
    </style>

    <style name="SettingOptionTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/settActive_options_textSize</item>
        <item name="android:layout_marginStart">@dimen/settActive_text_leftMargin</item>
    </style>

    <style name="SettingIconButtonStyle">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:outlineProvider">none</item>>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:contentDescription">@string/settActiv_user_conditions</item>
        <item name="android:padding">@dimen/settActiv_buttons_padding</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/YP_gray</item>

    </style>
</resources>