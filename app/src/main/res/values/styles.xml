<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/bigButton_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:shadowColor">@color/white</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/bigButton_textSize</item>
        <item name="android:fontWeight">500</item>

        <item name="cornerRadius">@dimen/bigButton_cornerRad</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/YP_black</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="HeadText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SettingSwitchStyle">
        <item name="thumbTint">@drawable/switchthump</item>
        <item name="trackTint">@drawable/switchtrack</item>
        <item name="android:padding">@dimen/settActiv_buttons_padding</item>
    </style>

    <style name="SettingOptionTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/settActive_options_textSize</item>
        <item name="android:layout_marginStart">@dimen/settActive_text_leftMargin</item>
    </style>

    <style name="SettingIconButtonStyle">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:outlineProvider">none</item>>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:contentDescription">@string/settActive_user_conditions</item>
        <item name="android:padding">@dimen/settActiv_buttons_padding</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/YP_gray</item>

    </style>

    <style name="BackArrowStyle">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="SearchEditStyle">
        <item name="android:background">@color/YP_lightGray</item>
        <item name="android:backgroundTint">@color/YP_lightGray</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/YP_gray</item>
        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:lines">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/YP_gray</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchClearImageStyle">
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:tint">@color/YP_gray</item>
    </style>

    <style name="SearchTrackUnitNameText">
        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/settActive_options_textSize</item>
    </style>

    <style name="SearchTrackUnitArtistTimeText">
        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_gray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SearchTrackUnitArrowButtonStyle">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:outlineProvider">none</item>>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/YP_gray</item>
    </style>

    <style name="SearchSmthWrongText">
        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="SearchNowifiRefreshButton">

        <item name="cornerRadius">54dp</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="SearchHistoryTextView">

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontWeight">500</item>

    </style>

    <style name="TrackPlayTitleStyle">

        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontWeight">400</item>

    </style>

    <style name="TrackPlayInfoStyle">

        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontWeight">400</item>

    </style>

    <style name="TrackPlayButtonPlay">

        <item name="tint">@color/black</item>

    </style>

    <style name="TrackPlayButtonAdd">

        <item name="srcCompat">@drawable/collection_add_button_light</item>

    </style>

    <style name="TrackPlayButtonLike">

        <item name="srcCompat">@drawable/like_button_light</item>

    </style>

    <style name="TrackPlayCurrentTime">

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>

    </style>

    <style name="TrackPlayArtist">

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">400</item>

    </style>
    <style name="TrackPlayName">

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontWeight">400</item>

    </style>
    <style name="MediaTabLayout">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">400</item>
        <item name="tabRippleColor">@color/YP_black</item>
        <item name="tabTextColor">@color/YP_black</item>
        <item name="tabIndicatorColor">@color/YP_black</item>
        <item name="tabIndicator">@drawable/tab_line</item>

    </style>
    <style name="MediaEmptyResultImage">
        <item name="srcCompat">@drawable/track_ph_unknown_light</item>

    </style>
    <style name="MediaEmptyResultText">
        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="MediaNewPlaylistButton">

        <item name="cornerRadius">54dp</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>
        <item name="backgroundTint">@color/black</item>
    </style>
    <style name="BottomNavigationBarStyle">

        <item name="itemIconTint">@color/bnv_selector_color</item>
        <item name="itemTextColor">@color/bnv_selector_color</item>
        <item name="backgroundTint">@color/white</item>



    </style>
</resources>