<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/bigButton_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:shadowColor">@color/white</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/bigButton_textSize</item>
        <item name="android:fontWeight">500</item>

        <item name="cornerRadius">@dimen/bigButton_cornerRad</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/YP_black</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="HeadText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingSwitchStyle">
        <item name="thumbTint">@drawable/switchthump</item>
        <item name="trackTint">@drawable/switchtrack</item>
        <item name="android:padding">@dimen/settActiv_buttons_padding</item>
    </style>

    <style name="SettingOptionTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settActive_options_textSize</item>
        <item name="android:layout_marginStart">@dimen/settActive_text_leftMargin</item>
    </style>

    <style name="SettingIconButtonStyle">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:outlineProvider">none</item>>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/settActive_user_conditions</item>
        <item name="android:padding">@dimen/settActiv_buttons_padding</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">0dp</item>

        <item name="android:backgroundTint">@color/black</item>

    </style>
    
    <style name="BackArrowStyle">
        <item name="android:tint">@color/white</item>
    </style>
    <style name="SearchEditConstrainStyle">
        <item name="android:background">@color/white</item>
    </style>
    <style name="SearchEditStyle">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:inputType">textVisiblePassword</item>
        <item name="android:lines">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SearchClearImageStyle">
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="SearchTrackUnitNameText">
        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settActive_options_textSize</item>
    </style>

    <style name="SearchTrackUnitArtistTimeText">
        <item name="android:fontFamily">@font/ys_disp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="SearchTrackUnitArrowButtonStyle">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:outlineProvider">none</item>>

        <item name="iconPadding">0dp</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/white</item>
    </style>
</resources>